{% extends 'base.html.twig' %}
{% block head %}
    <title>{% block title %}Liste Articles{%endblock%}</title>
{% endblock %}
{% block body %}
    <div class="container js-filter">
        <div class="row">
            <div class="col-md-3">
                {% form_theme form 'bootstrap_5_layout.html.twig' %}
                {{ form(form, {attr : {'class' : 'js-filter-form'}}) }}
            </div>
            <div class="col-md-9">
                <div class="grid js-filter-content">
                    {% for article in articles %}
                        {% include 'article/card.html.twig' with {article : article} only %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
